<h1>タスク一覧</h1>

<% if logged_in? %>

  <p>ログイン完了ユーザ: 
<%= current_user.name %>
</p>
<% else %>

  <div class="center jumbotron">
    <div class="text-center">
      
<%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>

    </div>
  </div>
<% end %>

<ul>
    
    <% @tasks.each do |task| %>
    
    <li>
        <%= link_to task.id, task_path(task) %>
        <%= task.content %>
        <%= task.status %>
    </li>
    
    <% end %>
    
</ul>
<% if logged_in? %>
<%= link_to "新規投稿", new_task_path %>
<div class="center jumbotron">
  <div class="text-center">
  <%= link_to 'Logout', logout_path, method: :delete, class: 'btn btn-lg btn-primary' %>
  </div>
<% else %>
  <div class="text-center">
  <%= link_to 'Login!', login_path, class: 'btn btn-lg btn-primary' %>
  </div>
</div>
<% end %>

